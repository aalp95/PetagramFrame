<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfil"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/IVperfilgato"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/gato1"
            />


            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/IVperfilgato"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/ivFish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icfull" />

                <TextView
                    android:id="@+id/tvCard"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pcant"
                    android:layout_marginLeft="42dp"
                    android:layout_marginStart="42dp" />

            </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>